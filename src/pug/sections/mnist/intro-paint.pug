.slide
  h1 Does the computer recognize the digit you are drawing?
  #intropaint.paint.columns
    .column
      .inputcontainer
        canvas.drawcanvas
        .input.box
          p Draw here
      p You
    .column
      .output.box
        p.digit 3
      p Computer
  script(type="text/javascript").
    
    currentSlide().backbutton = false;
    currentSlide().nextbutton = "How does that work?";
    currentSlide().onEnter = async (controller) => {
      controller.initIntroPaint(document.querySelector("#intropaint"))
    };
    
    currentSlide().onExit = async (controller) => {
      controller.cleanupPaint();
    };
