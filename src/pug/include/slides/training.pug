.slide(data-slide='training')
  h1.alternatives
    .titletrain.visible: span(data-i18n-str='training-title-train')
    .titletest: span(data-i18n-str='training-title-test')
  .train
    .view
      .inputspace.visible
        .paint
          .input.box.background
              canvas.drawcanvas
          p(data-i18n-str='ui-label-input')
        .training
          .box
            canvas.traininputcanvas
          p(data-i18n-str='training-label-training')
      .simplenetwork.visible
        canvas.network
        canvas.activations
      .advanced
        .parameter
          .title(data-i18n-str='training-adv-model-title')
          .select.modelid
            .option(data-value="dense", data-i18n-str='training-adv-model-dense').selected
            .option(data-value="cnn", data-i18n-str='training-adv-model-cnn') Convolutional Network
            .option(data-value="nohidden", data-i18n-str='training-adv-model-nohidden') No hidden layers
        .parameter
          .title(data-i18n-str='training-adv-activation-title')
          .select.activation
            .option(data-value="relu", data-i18n-str='training-adv-activation-relu').selected
            .option(data-value="tanh", data-i18n-str='training-adv-activation-tanh')
            .option(data-value="sigmoid", data-i18n-str='training-adv-activation-sigmoid')
        .columns
          .column
            .parameter
              .title(data-i18n-str='training-adv-learning-rate')
              input(type="range", min="-4" max="0" value="-3", step="any").learningrate
              .learningratetxt 0.001
          .column
            .parameter
              .title(data-i18n-str='training-adv-optimizer-title')
              .select.optimizerid
                .option(data-value="adam", data-i18n-str='training-adv-optimizer-adam').selected
                .option(data-value="sgd", data-i18n-str='training-adv-optimizer-sgd')
      .bars.vertical.visible

    .menu
      .box
        .info
          .info-item.imagesused
            .number 0
            div(data-i18n-str='training-label-images-used')
          .h-seperator
          .info-item.accuracy
            .number 10%
            div(data-i18n-str='training-label-predicted-accuracy')
        .v-seperator
        .controls
          a(href="#training", data-i18n-str-title="training-label-reset").reset
          a(href="#training", data-i18n-str-title="training-label-pause").pause-resume.pause
          a(href="#training", data-i18n-str-title="training-label-step").single-step
        //a.button.testit -&gt; Test the Network!
      .modeswitch
        a.activate(data-i18n-str='training-label-adv-activate')
        a.cancel(data-i18n-str='training-label-adv-cancel')
